@{
    ViewBag.Title = "Home Page";
}
<h1>Welcome to the Task List Organiser!</h1>

<h4>Please sign in below</h4>
<form action="/Home/SignIn" method="post">

    Username: <input type="text" name="UserName" /><br />
    Password: <input type="password" name="Password" /><br />
    <input type="submit" value="Sign In" />

</form>
<span id="error">@ViewBag.Error</span><br />
<p> Go ahead and add a task please. Thank you.</p>

<a href="/Home/Addtask">Add a task</a>


